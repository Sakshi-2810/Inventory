# ---------- STAGE 1: Build ----------
FROM maven:3.9.6-eclipse-temurin-17 AS build
WORKDIR /app

COPY pom.xml .
RUN mvn dependency:go-offline

COPY src ./src
RUN mvn clean package -DskipTests

# ---------- STAGE 2: Runtime ----------
# Use Playwright official image with all dependencies
FROM mcr.microsoft.com/playwright:focal AS runtime
WORKDIR /app

# Install OpenJDK 17 if not included
RUN apt-get update && apt-get install -y --no-install-recommends openjdk-17-jdk-headless \
    && rm -rf /var/lib/apt/lists/*

# Copy Spring Boot jar
COPY --from=build /app/target/*.jar app.jar

# Run the app
ENTRYPOINT ["java", "-XX:+UseContainerSupport", "-XX:MaxRAMPercentage=75", "-jar", "app.jar"]
