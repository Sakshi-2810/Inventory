# ---------- STAGE 1: Build ----------
FROM maven:3.9.6-eclipse-temurin-17 AS build
WORKDIR /app

COPY pom.xml .
RUN mvn dependency:go-offline

COPY src ./src
RUN mvn clean package -DskipTests -T 1C

# ---------- STAGE 2: Runtime ----------
FROM eclipse-temurin:17-jdk AS runtime
WORKDIR /app

# Install minimal dependencies for Playwright Chromium
RUN apt-get update && apt-get install -y --no-install-recommends \
    libdbus-1-3 libatk1.0-0 libatk-bridge2.0-0 libcups2 libxkbcommon0 \
    libatspi2.0-0 libxfixes3 libpango-1.0-0 libcairo2 libasound2 \
    fonts-liberation libnss3 libx11-xcb1 libxcomposite1 libxdamage1 \
    libxrandr2 libxext6 libxrender1 libgbm1 libglib2.0-0 libdrm2 \
    curl git \
    && rm -rf /var/lib/apt/lists/*

# Node.js + Playwright
RUN wget -qO- https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs \
    && npm install -g playwright-chromium \
    && rm -rf /var/lib/apt/lists/*
# Copy Spring Boot jar
COPY --from=build /app/target/*.jar app.jar

ENTRYPOINT ["java", "-XX:+UseContainerSupport", "-XX:MaxRAMPercentage=75", "-jar", "app.jar"]
